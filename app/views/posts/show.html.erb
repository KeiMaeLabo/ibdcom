<%= render partial: "layouts/header" %>
<section class="section">
  <div class="comments-list">
    <div class="above-field">
      <div class="main-post">
        <div class="main-post-top">
          <div class="main-post-user">
            <%= @post.created_at.strftime("%Y年%m月%d日 %H:%M")%> 
            <%= @post.user.name %> <%= @post.user.disease %> 病歴:<%= @post.user.history %>年
          </div>
          <% if @post.user.image.present? %>
            <%= image_tag @post.user.image_url, size: '50x50', class: "post-image" %>
          <% else %>
            <i class="fas fa-user-circle"></i>
          <% end %>
          <div class="comment-num">
            <i class="fas fa-comment-alt"></i> 0
          </div>
        </div>
        <div class="main-post-content">
          <i class="fas fa-comment"></i> <%= @post.text %> 
        </div>
      </div>
      <div class="comment">
        <div class="comment-user">
          2020/06/18
        </div>
        <div class="comment-content">
          <i class="fas fa-comment"></i> ああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああああ
        </div>
      </div>
    </div>
    <div class="comments-footer">
      <%= form_with model: Post.new, local: true do |f| %>
        <%= f.text_area :text, class: 'comment-input', placeholder: "コメントを入力してください" %>
        <%= f.submit "アップロード", class: 'comment-btn' %>
      <% end %>
    </div>
  </div>
</section>
<%= render partial: "layouts/footer" %>
