<div class="post">
  <div class="post-top">
    <div class="post-user">
      <%= post.created_at.strftime("%Y年%m月%d日 %H:%M")%>  <%= post.user.name %> <%= post.user.disease %> 病歴:<%= post.user.history %>年
    </div>
    <div class="comment-num">
      <i class="fas fa-comment-alt"></i> <%= post.show_comment_num %>
    </div>
  </div>
  <div class="post-content">
    <i class="fas fa-comment"></i> <%= post.text %>
  </div>
  <div class="post-bottom">
    <div class="new-comment">
      最新コメント: <%= post.show_last_comment %>
    </div>
    <div class="comment-user">
      <%= post.show_last_comment_date %>
      <%= post.show_last_comment_user %>
      <%= post.show_last_comment_disease %>
      <%= post.show_last_comment_history %>
    </div>
  </div>
  <%= link_to " ", "/posts/#{post.id}", class: 'post-link' %>
</div>